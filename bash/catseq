### Use as follows: catfq [left reads file] [right reads file] [desired padding length] <output-gzip-flag> > <output file>

l=$1
r=$2
pad=$3
gz=$4

if [[ "$l" =~ \.gz$ ]]; then
  exec 3< <(gzip -cd "$l")
else
  exec 3< "$l"
fi

if [[ "$r" =~ \.gz$ ]]; then
  exec 4< <(gzip -cd "$r")
else
  exec 4< "$r"
fi

if [[ "$gz" ]]; then
  exec 7> >(gzip -c)
else
  exec 7>&1
fi

run_catfq() {
  s=$(printf %${1}s | tr ' ' 'N')
  q=$(printf %${1}s | tr ' ' '!')
  awk -v s=$s -v q=$q -v len=$1 'BEGIN { sq[0]=q; sq[2]=s }
    { r=NR%4 }
    r%2 { print; next }
    { printf $1""substr(sq[r], 1, len-length($1))"\n" }'
}

run_catfq $pad <&3 >&7
run_catfq $pad <&4 >&7

